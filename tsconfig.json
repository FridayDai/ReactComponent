{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "typeRoots": [
    "./node_modules/@types",
    "./types"
  ],
  "include": [
    "components"
  ],
  "exclude": [
    "node_modules"
  ]
}
